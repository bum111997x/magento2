<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <!--  Start of the main content that needs to be added-->
                                                        <item name="discount1" xsi:type="array">
                                                            <!-- The path to our js file-->
                                                            <item name="component" xsi:type="string">
                                                                Cowell_ProductShippingMethod/js/view/checkout/cart/totals/shipping_fee
                                                            </item>
                                                            <item name="sortOrder" xsi:type="string">30</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">
                                                                    Cowell_ProductShippingMethod/checkout/cart/totals/shipping_fee
                                                                </item>
                                                                <!--  Show custom discount on order summary-->
                                                                <item name="discount1" xsi:type="string"
                                                                      translate="true">Payment Fee
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                                <item name="cart_items" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="details" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="shipping_fee" xsi:type="array">
                                                                    <item name="component" xsi:type="string">
                                                                        Cowell_ProductShippingMethod/js/view/checkout/summary/item/details/shipping_fee
                                                                    </item>
                                                                    <item name="displayArea" xsi:type="string">
                                                                        after_details
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                                <!--  End-->
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
